<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="transactionMapper">

<select id="getGroupTransactions" resultType="map">
    SELECT 
        TRAN_ID as "tran_id",
        TITLE as "store_name",
        TO_CHAR(TRANS_DATE, 'YYYY-MM-DD') as "date",
        ORIGINAL_AMOUNT as "amount",
        CATEGORY as "category",
        TYPE as "type",
        NICKNAME as "user_name",
        GROUPB_ID as "ledger_id"
    FROM GROUPTRANS
    WHERE GROUPB_ID = #{groupId}
    ORDER BY TRANS_DATE DESC
</select>


</mapper>