<?xml version="1.0" encoding="UTF-8"?><?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="groupMapper">
    <select id="selectGroupList" parameterType="int" resultType="com.kh.osori.group.model.vo.GroupBudget">
        SELECT 
            G.GROUPB_ID AS groupbId,
            G.TITLE AS title,
            G.B_AMOUNT AS bAmount,
            G.START_DATE AS startDate,
            G.END_DATE AS endDate
        FROM GROUPBUDGET G
        JOIN GROUP_MEMBER M ON G.GROUPB_ID = M.GROUPB_ID
        WHERE M.USER_ID = #{userId}
        ORDER BY G.CREATED_AT DESC
    </select>
</mapper>