package com.kh.osori.notification.model.vo;

import java.sql.Date;

import lombok.AllArgsConstructor;
import lombok.Builder;
import lombok.Data;
import lombok.NoArgsConstructor;

@Data
@Builder
@NoArgsConstructor
@AllArgsConstructor
public class NotificationVO {
	private int notiId;      // 알림 고유 번호 (DB PK)
    private String nType;    // 알림 타입: "INVITE", "INCOME", "EXPENSE"
    private String message;  // 알림 내용
    private String sender;   // 보낸 사람 (ID 또는 닉네임)
    private String receiver; // 받는 사람 ID
    private Date createdAt;    // 발송 시간
    private String isRead;   // 읽음 여부 ('N', 'Y')
    private int inviteNum;  // 초대된 가계부 번호
}
