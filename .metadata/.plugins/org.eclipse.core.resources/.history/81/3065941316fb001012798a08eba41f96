public class GroupBudgetController {

}
package com.kh.osori.group.controller;

import org.springframework.web.bind.annotation.*;
import com.kh.osori.group.model.vo.GroupBudget;
import java.util.List;

@RestController
@RequestMapping("/group") // 그룹 관련 API는 /group으로 시작
@CrossOrigin
public class GroupBudgetController {

    @Autowired
    private GroupBudgetService service;

    // 사용자가 참여 중인 그룹 가계부 리스트 조회
    @GetMapping("/user/{userId}")
    public ResponseEntity<List<GroupBudget>> getMyGroupList(@PathVariable int userId) {
        List<GroupBudget> list = service.selectGroupList(userId);
        return ResponseEntity.ok(list);
    }
}